{
    "name": "lencse/queue",
    "type": "project",
    "authors": [
        {
            "name": "Levente LoÌˆki",
            "email": "leventeloki@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Lencse\\Queue\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    },
    "require": {
        "php": ">=7.2.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html logs/phpunit/coverage-report --coverage-clover logs/phpunit/clover.xml --coverage-text --log-junit logs/phpunit/test-report.xml",
        "cs": "phpcs --standard=PSR2 src test",
        "phpstan": "phpstan analyse --level 7 src test",
        "test-all": "composer test-coverage && composer cs && composer phpstan"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "^0.11.2"
    }
}
